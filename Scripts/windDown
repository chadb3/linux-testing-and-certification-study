#!/bin/bash
# test print
#echo "hello: $1";
# start of shutdown script
# 1. sudo shutdown $1
# 2. where $1 is a time or +(minutes) (example: +5; for +5 minutes)
echo "running shutdown script";
echo "options passed: $1 $2 $3"
sudo shutdown $1 $2
echo "shutdown script has initiated"
echo "type \"shutdown -c\" and hit enter to cancel!"
